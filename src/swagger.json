    "paths": {
        "/categories": {
            "post": {
                "tags": ["Category"],
                "summary": "create a category",
                "description": "create a new category",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "exemple": {
                                    "name": "category name",
                                    "description": "category description"
                                }
                            }
                        } 
                    }
                },
                "responses": {
                    "201": {
                        "description": "created"
                    },
                    "500": {
                        "description": "category already exists"
                    }
                }
            },
            "get": {
                "tags": ["Category"],
                "summary": "list all categories",
                "description": "list all categories",
                "responses": {
                    "200": {
                        "description": "sucess",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type":"object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                
                                    }
                            }
                        }
                    },
                    "404": {
                        "description": "category already exists"
                    }
                }
            }
        }
    },
        "/specifications": {
            "post": {
                "tags": ["Specifications"],
                "summary":"create new specification",
                "requestBody": {
                    "content":{
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Specification"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Specification already exists"
                    }
            }
    }
}
},
